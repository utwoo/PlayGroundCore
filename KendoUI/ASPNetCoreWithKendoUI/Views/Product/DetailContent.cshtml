@model ProductModel

<script>
    function complete(data) {
        detailWindow.close();

        var grid = $('#grid').data('kendoGrid');
        grid.dataSource.page(1);
        return false;
    }
</script>

<form data-ajax="true" data-ajax-method="post" data-ajax-complete="complete" asp-controller="Product" asp-action="Update">
    <div class="container">
        <div class="form-group row">
            <kendo-label asp-for="Id" />
            <kendo-editor asp-for="Id" />
        </div>
        <div class="form-group row">
            <kendo-label asp-for="ProductName" />
            <kendo-editor asp-for="ProductName" />
            <span asp-validation-for="ProductName"></span>
        </div>
        <button type="submit" name="save" class="btn bg-blue">
            <i class="fa fa-floppy-o"></i>
            Save
        </button>
    </div>
</form>
